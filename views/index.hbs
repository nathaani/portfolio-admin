<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>About Admin</title>
  </head>
  <body>
    <h1>About Admin</h1>

    <!-- Form for adding a new note -->
    <form action="/notes" method="post">
      <label for="img">Image:</label>
      <input type="text" id="img" name="img" required />

      <label for="text">About Me Text:</label>
      <input type="text" id="text" name="text" required />

      <button type="submit">Add Note</button>
    </form>

    <section class="notes">
      {{#each About}}

        <div>
          <h2>image path:</h2>
         
          <ul><li> {{img}}</li></ul>
        </div>

        <div>
          <h2>about me text</h2>
          <ul><li>{{text}}</li></ul>
          
        </div>

        <div>

          <!-- Links for editing and deleting the note -->
          <a href="note/edit/{{_id}}">Edit</a>
          <a
            href="note/delete/{{_id}}"
            onclick="return confirm('Are you sure you want to delete this note?');"
          >Delete</a>
        </div>

      {{/each}}
    </section>

  </body>
</html>